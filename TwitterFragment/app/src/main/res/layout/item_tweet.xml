<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivProfileImage"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:layout_toRightOf="@+id/ivProfileImage"
        android:text="New Text"
        android:textSize="@dimen/font_size_small"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvFullName"
        android:layout_toEndOf="@+id/tvFullName"
        android:layout_toRightOf="@+id/tvFullName"
        android:paddingLeft="10dp"
        android:text="New Text"
        android:textSize="@dimen/font_size_small" />

    <TextView
        android:id="@+id/tvCreateAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tvUserName"
        android:paddingRight="10dp"
        android:text="New Text"
        android:textSize="@dimen/font_size_small" />

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp" />


    <TextView
        android:id="@+id/tvBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivProfileImage"
        android:layout_below="@id/tvFullName"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:layout_toRightOf="@+id/ivProfileImage"
        android:text="New Text"
        android:textSize="@dimen/font_size_medium" />

    <ImageView
        android:id="@+id/ivBodyImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/tvBody"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:layout_toRightOf="@+id/ivProfileImage" />

    <LinearLayout
        android:id="@+id/llInteract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivBodyImage"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:layout_toRightOf="@+id/ivProfileImage">

        <Button
            android:id="@+id/bTweet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/arrow"
            android:text="5"></Button>

        <Button
            android:id="@+id/bReTweet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/retweet"
            android:text="5"></Button>


        <Button
            android:id="@+id/bFavourist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/star"

            android:text="5"></Button>

    </LinearLayout>
</RelativeLayout>
